@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudThemeProvider />
<MudDialogProvider />

<MudLayout  >
    <MudAppBar style="background-color:white" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Error" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <MudImage Src="image/bank.png" Width="200" Height="50"/>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Error" Edge="Edge.End" OnClick="@((e) => logout())" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="pa-4">
            @Body
        </MudContainer>

    </MudMainContent>
</MudLayout>
@code {

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    async Task logout()
    {

        NavigationManager.NavigateTo($"/", forceLoad: true);
    }

    protected override async Task OnInitializedAsync()
    {
        
    }
}